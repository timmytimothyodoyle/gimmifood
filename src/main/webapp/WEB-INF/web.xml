<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
	<!--  servlet declarations -->
  <servlet>
		<servlet-name>FoodQueryServlet</servlet-name>
		<servlet-class>com.timmy.odoyle.gimmifood.servlet.FoodQueryServlet</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>RecipeQueryServlet</servlet-name>
		<servlet-class>com.timmy.odoyle.gimmifood.servlet.RecipeQueryServlet</servlet-class>
	</servlet>
	<!-- servlet mapping declarations -->
	<servlet-mapping>
		<servlet-name>FoodQueryServlet</servlet-name>
		<url-pattern>/food</url-pattern>
	</servlet-mapping>
	
		<servlet-mapping>
		<servlet-name>RecipeQueryServlet</servlet-name>
		<url-pattern>/recipe</url-pattern>
	</servlet-mapping>
	
</web-app>

